# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Python files
[*.py]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# PowerShell scripts
[*.{ps1,psm1}]
indent_size = 4

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab

# JSON files
[*.json]
indent_size = 2

# Proto files
[*.proto]
indent_size = 2
